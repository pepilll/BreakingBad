<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/characterInfoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/characterNameTextView" />

    <TextView
        android:id="@+id/characterNameTextView"
        style="@style/CustomText"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/birthdayTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/birthdayTextView"
        style="@style/CustomText"
        app:layout_constraintBottom_toTopOf="@+id/characterNameTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/categoryTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/birthdayTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/nicknameTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/categoryTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/portrayedTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/nicknameTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/statusTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/portrayedTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/occupationTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/statusTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/betterCallSoulTextView"
        style="@style/CustomText"
        app:layout_constraintTop_toBottomOf="@+id/occupationTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/appearanceTextView"
        style="@style/CustomText"
        android:paddingBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/betterCallSoulTextView"
        tools:ignore="MissingConstraints,RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>
